<h1>Food Form</h1>

<%= form_with(model:@food_form, local: true) do |form| %>
    <%= form.label :title, 'Food Name:', class: "" %>
    <%= form.text_field :title %>
    <%= form.label :text, 'Measurement Unit(g/kg)', class: "" %>
    <%= form.text_area :text %>
    <%= form.label :price, 'Unit Price($)', class: "" %>
    <%= form.number_field :price %>
    <%= form.label :quantity, 'Quantity', class: "" %>
    <%= form.number_field :quantity %>    
    <%= form.submit 'Submit Food', class: "" %>
<% end %>
