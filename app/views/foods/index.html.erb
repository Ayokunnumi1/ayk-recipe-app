<%= render 'devise/shared/navbar' %>

<h1> Food list </h1>
<button><%= link_to "Add Food", new_food_path %></button>

<table>
<thead>
    <tr>
    <th>Name</th>
    <th>Measurement Unit</th>
    <th>Unit Price</th>
    <th>Actions</th>
    </tr>
</thead>

<tbody>
    <% @foods.each do |food| %>
        <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td> 
      </tr>
    <% end %>
</tbody>
</table>

<button><%= link_to 'Create Recipe', new_recipe_path %></button>
