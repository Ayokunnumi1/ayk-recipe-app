<h1>Ingredient Form</h1>

<%= form_with(model:@recipe_food, url: recipe_foods_path, local: true) do |form| %>
    <%= form.label :recipe_id, 'Recipe:' %>
  <%= form.collection_select :recipe_id, Recipe.all, :id, :name %><br />

  <%= form.label :food_id, 'Food:' %>
<%= form.collection_select :food_id, Food.all, :id, :name %><br />

  <%= form.label :quantity, 'Quantity:' %>
  <%= form.number_field :quantity %><br />

  <%= form.hidden_field :recipe_id %> <br />

    <%= form.submit 'Submit Food', class: "" %>
<% end %>