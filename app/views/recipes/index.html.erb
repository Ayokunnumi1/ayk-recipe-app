<%= render 'devise/shared/navbar' %>

<section class="recipe-list-container">
<button><%= link_to 'Create Recipe', new_recipe_path %></button>

<% @recipes.each do |recipe| %>
        <div class="recipe-content">
            <p><%= link_to recipe.name, recipe_path(recipe) %></p>
            <p><%= button_to 'Remove', recipe_path(recipe.id), method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <p><%= recipe.description %></p>
        </div>
        <% end %>
</section>