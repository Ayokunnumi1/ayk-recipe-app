<%= render 'devise/shared/navbar' %>

<p>Amount of food items to buy:<%= @recipe.recipe_foods.count %></p>
<p>Total Value of food needed:<%= @recipe.recipe_foods.sum { |recipe_food| recipe_food.food.price } %></p>

<section>
  <table>
      <thead>
          <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Price</th>
          </tr>
      </thead>
  
      <tbody>
          <% @recipe.recipe_foods.each do |recipe_food| %>
      <tr>
        <td><%= recipe_food.food.name %></td>
        <td><%= recipe_food.quantity %></td>
        <td><%= recipe_food.food.price %></td>
      </tr>
    <% end %>
      </tbody>
      </table>
</section>