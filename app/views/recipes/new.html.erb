<h1>Recipe Form</h1>

<%= form_with(model:@recipe, url: recipes_path, local: true) do |form| %>
    <%= form.label :name, 'Name Of Food Recipe:', class: "" %>
    <%= form.text_field :name %><br />

    <%= form.label :preparation_time, 'Preparation Time(hrs)', class: "" %>
    <%= form.text_field :preparation_time %><br />

    <%= form.label :cooking_time, 'Cooking Time(hrs)', class: "" %>
    <%= form.text_field :cooking_time %><br />
    
    <%= form.label :description, 'Description', class: "" %>
    <%= form.text_field :description %><br />

    <%= form.label :Public, 'Public' %>
    <%= form.check_box :is_public %><br />
    
    <%= form.submit 'Submit Food', class: "" %>
<% end %>

