<%= render 'devise/shared/navbar' %>

<p> Preparation time: <%= @recipe.preparation_time %></p>
<p> Cooking time: <%= @recipe.cooking_time %></p>
<p>Steps go here...</p>
<div> <% if @recipe.is_public %>
       <%= 'Public' %>
         <% else %>
         <%= 'Private' %>
        <% end %>
    <label class="switch">
      <%= check_box_tag 'is_public', 'true', @recipe.is_public, disabled: true, class: "slider round" %>
      <span class="slider round"></span>
    </label>
</div>
<%= button_to 'Generate Shopping List', shopping_list_recipe_path(@recipe), method: :get %>
<button><%= link_to 'Add Ingredients', new_recipe_food_path(recipe_id: @recipe.id), class: '' %></button>

<table>
    <thead>
        <tr>
        <th>Food</th>
        <th>Recipe</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Actions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @recipe.recipe_foods.each do |recipe_food| %>
    <tr>
      <td><%= recipe_food.food.name %></td>
      <td><%= recipe_food.recipe.name %></td>
      <td><%= recipe_food.quantity %></td>
      <td><%= recipe_food.food.price %></td>
      <td>
      <%= link_to 'Edit', edit_recipe_food_path(recipe_food), method: :get %>
      </td> <!-- Here was the error, missing closing bracket -->
      <td>
     <%= button_to 'Delete', recipe_food_path(recipe_food), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
    </tbody>
    </table>